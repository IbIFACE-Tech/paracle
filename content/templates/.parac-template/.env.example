# .env.example
# Copy this file to .env and fill in your values

# ==========================================
# LLM Provider API Keys (REQUIRED)
# ==========================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_ORGANIZATION=your-org-id

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI (Gemini)
# GOOGLE_API_KEY=your-google-api-key-here

# Azure OpenAI
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_API_VERSION=2024-02-01

# ==========================================
# Paracle Configuration (OPTIONAL)
# ==========================================

# Environment
# PARACLE_ENV=development        # development, staging, production

# API Server
# PARACLE_API_HOST=0.0.0.0
# PARACLE_API_PORT=8000
# PARACLE_API_KEY=your-api-key   # If API authentication is enabled

# Logging
# PARACLE_LOG_LEVEL=INFO         # DEBUG, INFO, WARNING, ERROR, CRITICAL
# PARACLE_LOG_FORMAT=json        # json, text

# Storage
# PARACLE_STORAGE_PATH=.parac/data

# ==========================================
# Database (OPTIONAL)
# ==========================================

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/paracle

# Redis (for caching/queue)
# REDIS_URL=redis://localhost:6379/0

# ==========================================
# External Services (OPTIONAL)
# ==========================================

# Web Search
# SEARCH_API_KEY=your-search-api-key

# Observability
# OTEL_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=paracle

# Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@example.com
# EMAIL_PASSWORD=your-password

# ==========================================
# Cloud Storage (OPTIONAL)
# ==========================================

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Azure Blob Storage
# AZURE_STORAGE_ACCOUNT=your-account
# AZURE_STORAGE_KEY=your-key
# AZURE_CONTAINER=your-container

# Google Cloud Storage
# GCP_PROJECT_ID=your-project-id
# GCP_BUCKET=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ==========================================
# Security (OPTIONAL)
# ==========================================

# JWT Secret (if using authentication)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRATION=3600

# Encryption Key (if encrypting data at rest)
# ENCRYPTION_KEY=your-encryption-key-here
