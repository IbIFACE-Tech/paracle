# Paracle Environment Configuration
# Copy this file to .env and update values

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL configuration (production)
# ⚠️ SECURITY WARNING: Change these values before deployment!
# Default values are for DEVELOPMENT ONLY
POSTGRES_DB=paracle
POSTGRES_USER=paracle
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION  # ⚠️ Use strong password!

# Database URL - SET THIS INSTEAD to override individual settings
# Recommended: Use this single URL in production with secure credentials
PARACLE_DATABASE_URL=postgresql://paracle:SECURE_PASSWORD@postgres:5432/paracle

# =============================================================================
# REDIS
# =============================================================================

# Redis URL (event bus and caching)
PARACLE_REDIS_URL=redis://redis:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server settings
PARACLE_API_HOST=0.0.0.0
PARACLE_API_PORT=8000
PARACLE_LOG_LEVEL=INFO

# Secret key for JWT and session management (CHANGE IN PRODUCTION)
# Generate with: openssl rand -hex 32
PARACLE_SECRET_KEY=CHANGE_ME_IN_PRODUCTION

# =============================================================================
# PARACLE WORKSPACE
# =============================================================================

# Paracle workspace root directory (inside container)
PARACLE_WORKSPACE_ROOT=/app/.parac

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================

# OpenAI (GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=

# xAI (Grok)
XAI_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# Groq
GROQ_API_KEY=

# Mistral
MISTRAL_API_KEY=

# Together AI
TOGETHER_API_KEY=

# Perplexity
PERPLEXITY_API_KEY=

# Cohere
COHERE_API_KEY=

# OpenRouter (Multi-provider aggregator)
OPENROUTER_API_KEY=

# Fireworks
FIREWORKS_API_KEY=

# Ollama (local - no API key needed)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# DOCKER & SANDBOX CONFIGURATION (Phase 5)
# =============================================================================

# Docker Group ID (for socket access)
# Get with: getent group docker | cut -d: -f3
# Or on Windows: docker run --rm alpine sh -c "stat -c '%g' /var/run/docker.sock"
DOCKER_GROUP_ID=999

# Sandbox execution defaults
PARACLE_SANDBOX_DEFAULT_TIMEOUT=300
PARACLE_SANDBOX_DEFAULT_MEMORY_MB=512
PARACLE_SANDBOX_DEFAULT_CPU_CORES=1.0
PARACLE_SANDBOX_NETWORK_MODE=none
PARACLE_SANDBOX_READ_ONLY_FS=true
PARACLE_SANDBOX_DROP_CAPABILITIES=true

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file: cp .env.example .env
# 2. Update POSTGRES_PASSWORD with a strong password
# 3. Generate PARACLE_SECRET_KEY: openssl rand -hex 32
# 4. Add your LLM API keys (at least one provider)
# 5. Set DOCKER_GROUP_ID for sandbox support
# 6. Never commit .env to git! (already in .gitignore)
#
# For production deployment:
# - Use proper secrets management (Docker Secrets, Vault, etc.)
# - Enable HTTPS with reverse proxy (nginx, Traefik)
# - Set resource limits in docker-compose.yaml
# - Regular backups of postgres-data volume
# - Keep base images updated
#
# =============================================================================
