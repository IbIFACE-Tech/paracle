# Paracle Environment Configuration
# Copy this file to .env and update values

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL configuration (production)
POSTGRES_DB=paracle
POSTGRES_USER=paracle
POSTGRES_PASSWORD=change-me-in-production

# Database URL (auto-constructed from above, or override)
# PARACLE_DATABASE_URL=postgresql://paracle:password@postgres:5432/paracle

# =============================================================================
# REDIS
# =============================================================================

# Redis URL
# PARACLE_REDIS_URL=redis://redis:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server settings
PARACLE_API_HOST=0.0.0.0
PARACLE_API_PORT=8000
PARACLE_LOG_LEVEL=INFO

# Secret key for JWT and session management (CHANGE IN PRODUCTION)
PARACLE_SECRET_KEY=change-me-to-a-random-secure-string-in-production

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Ollama (local)
# OLLAMA_BASE_URL=http://localhost:11434

# LM Studio (local)
# LM_STUDIO_BASE_URL=http://localhost:1234

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable development mode (hot reload, debug logging)
# PARACLE_DEV_MODE=true

# Enable experimental features
# PARACLE_EXPERIMENTAL_RAG=false
# PARACLE_EXPERIMENTAL_MULTI_AGENT=false

# =============================================================================
# TOOL CONFIGURATION
# =============================================================================

# Filesystem tool restrictions (comma-separated paths)
# PARACLE_ALLOWED_PATHS=/app/data,/tmp

# Shell command whitelist (comma-separated commands)
# PARACLE_ALLOWED_COMMANDS=git,ls,cat,echo,python

# HTTP request timeout (seconds)
# PARACLE_HTTP_TIMEOUT=30.0

# Shell command timeout (seconds)
# PARACLE_COMMAND_TIMEOUT=30.0

# =============================================================================
# OBSERVABILITY
# =============================================================================

# Enable metrics export
# PARACLE_METRICS_ENABLED=true

# Enable tracing
# PARACLE_TRACING_ENABLED=false

# Logging configuration
# PARACLE_LOG_FORMAT=json
# PARACLE_LOG_FILE=/app/logs/paracle.log

# =============================================================================
# SECURITY
# =============================================================================

# CORS allowed origins (comma-separated)
# PARACLE_CORS_ORIGINS=http://localhost:3000,https://app.example.com

# Rate limiting
# PARACLE_RATE_LIMIT_ENABLED=true
# PARACLE_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# SANDBOX CONFIGURATION (Phase 5)
# =============================================================================

# Docker group ID for socket access (run `getent group docker | cut -d: -f3` on host)
DOCKER_GROUP_ID=999

# Sandbox defaults
PARACLE_SANDBOX_BASE_IMAGE=paracle/sandbox:latest
PARACLE_SANDBOX_DEFAULT_TIMEOUT=300
PARACLE_SANDBOX_DEFAULT_MEMORY_MB=512
PARACLE_SANDBOX_DEFAULT_CPU_CORES=1.0
PARACLE_SANDBOX_DEFAULT_DISK_MB=1024

# Sandbox security
PARACLE_SANDBOX_NETWORK_MODE=none
PARACLE_SANDBOX_READ_ONLY_FS=true
PARACLE_SANDBOX_DROP_CAPABILITIES=true

# Resource limits (max values)
PARACLE_SANDBOX_MAX_MEMORY_MB=2048
PARACLE_SANDBOX_MAX_CPU_CORES=4.0
PARACLE_SANDBOX_MAX_TIMEOUT_SECONDS=3600

# Cleanup
PARACLE_SANDBOX_AUTO_CLEANUP=true
PARACLE_SANDBOX_CLEANUP_TIMEOUT=30

# Artifact review
PARACLE_REVIEW_AUTO_APPROVE=false
PARACLE_REVIEW_REQUIRE_APPROVAL_FOR_FILE_CHANGES=true
PARACLE_REVIEW_REQUIRE_APPROVAL_FOR_CODE_EXECUTION=true
PARACLE_REVIEW_YOLO_MODE=false
