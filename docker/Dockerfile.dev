# Paracle Development Dockerfile
# Includes dev dependencies and supports hot reload

FROM python:3.11-slim AS dev

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    make \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set Python environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    UV_SYSTEM_PYTHON=1

# Copy dependency files
COPY pyproject.toml uv.lock ./
COPY packages/ ./packages/

# Install ALL dependencies (including dev)
RUN uv sync --frozen

# Copy application code
COPY . .

# Create non-root user
RUN useradd -m -u 1000 paracle && \
    chown -R paracle:paracle /app
USER paracle

# Expose API port
EXPOSE 8000

# Default command (can be overridden)
CMD ["uv", "run", "uvicorn", "paracle_api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
