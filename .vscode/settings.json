{
  "makefile.configureOnOpen": false,
  // ═══════════════════════════════════════════════════════════════
  // PYTHON CONFIGURATION
  // ═══════════════════════════════════════════════════════════════
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.completeFunctionParens": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests",
    "-v",
    "--tb=short"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "none",
  // ═══════════════════════════════════════════════════════════════
  // EDITOR SETTINGS
  // ═══════════════════════════════════════════════════════════════
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.rulers": [
    88,
    120
  ],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.semanticHighlighting.enabled": true,
  // ═══════════════════════════════════════════════════════════════
  // FILE ASSOCIATIONS
  // ═══════════════════════════════════════════════════════════════
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    ".parac/**/*.yaml": "yaml",
    "pyproject.toml": "toml",
    "Makefile": "makefile"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/.coverage": true,
    "**/htmlcov": true,
    "**/.DS_Store": true,
    "**/*.egg-info": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.mypy_cache/**": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  // ═══════════════════════════════════════════════════════════════
  // SEARCH CONFIGURATION
  // ═══════════════════════════════════════════════════════════════
  "search.exclude": {
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/htmlcov": true,
    "**/*.egg-info": true
  },
  // ═══════════════════════════════════════════════════════════════
  // FORMATTING & LINTING
  // ═══════════════════════════════════════════════════════════════
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on",
    "editor.formatOnSave": true
  },
  // ═══════════════════════════════════════════════════════════════
  // YAML CONFIGURATION
  // ═══════════════════════════════════════════════════════════════
  "yaml.schemas": {
    ".parac/project.yaml": "file:///${workspaceFolder}/.parac/project.yaml",
    ".parac/roadmap/*.yaml": "file:///${workspaceFolder}/.parac/roadmap/*.yaml",
    ".parac/agents/manifest.yaml": "file:///${workspaceFolder}/.parac/agents/manifest.yaml"
  },
  "yaml.customTags": [
    "!include scalar",
    "!join sequence"
  ],
  "yaml.format.enable": true,
  "yaml.validate": true,
  // ═══════════════════════════════════════════════════════════════
  // TERMINAL CONFIGURATION
  // ═══════════════════════════════════════════════════════════════
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}",
    "PARACLE_ENV": "development"
  },
  "terminal.integrated.scrollback": 10000,
  // ═══════════════════════════════════════════════════════════════
  // GIT CONFIGURATION
  // ═══════════════════════════════════════════════════════════════
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT AGENT MODE - Autonomous execution
  // ═══════════════════════════════════════════════════════════════
  "chat.agent.enabled": true,
  "chat.toolApprovals": {
    "*": "allow"
  },
  "github.copilot.chat.terminalChatAutoRun": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT COMPLETIONS - Inline code suggestions
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "yaml": true,
    "json": true,
    "jsonc": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "onHover",
  // ═══════════════════════════════════════════════════════════════
  // COPILOT CHAT - Enhanced conversation
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.codesearch.enabled": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT EDITS - Code modifications
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.edits.enabled": true,
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT CODE ACTIONS - Quick fixes and refactoring
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.generateTests.codeLens": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT COMMIT - Git integration
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.commitMessageGeneration.enabled": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT DEBUGGING - Auto-debug assistance
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.startDebugging.enabled": true,
  // ═══════════════════════════════════════════════════════════════
  // COPILOT REVIEW - Code review features
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.reviewSelection.enabled": true,
  // ═══════════════════════════════════════════════════════════════
  // CONTEXT AWARENESS - Better code understanding
  // ═══════════════════════════════════════════════════════════════
  "github.copilot.chat.search.semanticTextResults": true,
  "chat.agent.maxRequests": 500,
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursorpyright.analysis.diagnosticMode": "workspace",
  "cursorpyright.analysis.inlayHints.functionReturnTypes": true,
  "cursorpyright.analysis.inlayHints.variableTypes": true,
  "cursorpyright.analysis.typeCheckingMode": "basic"
}
